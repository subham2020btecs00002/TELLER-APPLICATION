package com.example.bankingApp.service;


import com.example.bankingApp.entity.Transaction;
import com.example.bankingApp.entity.TransactionStatus;
import com.example.bankingApp.repository.TransactionRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.List;

@Service
public class TransactionService {

    @Autowired
    private TransactionRepository repository;

    public Transaction initiateTransaction(Transaction transaction) {
        transaction.setStatus(TransactionStatus.PENDING);
        return repository.save(transaction);
    }

    public List<Transaction> getPendingTransactions() {
        return repository.findAll().stream()
                .filter(tx -> tx.getStatus() == TransactionStatus.PENDING)
                .toList();
    }

    public Transaction approveTransaction(int transactionId, String approver) {
        Transaction transaction = repository.findById(transactionId).orElseThrow();
        transaction.setStatus(TransactionStatus.APPROVED);
        transaction.setApprovedBy(approver);
        return repository.save(transaction);
    }
}
