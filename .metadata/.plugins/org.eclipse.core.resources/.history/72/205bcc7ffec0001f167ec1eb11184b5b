package com.example.bank.model;

import jakarta.persistence.*;
import lombok.Data;
import lombok.NoArgsConstructor;

import java.util.List;

@Data
@NoArgsConstructor
@Entity
public class Account {
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long account_id;

    @Column(nullable = false, name = "opening_balance") // Matches SQL column name
    private double openingBalance;

    @Column(nullable = false, name = "closing_balance") // Matches SQL column name
    private double closingBalance;

    @Column(nullable = false, unique = true, name = "account_number") // Matches SQL column name
    private String account_number;

    @ManyToOne
    @JoinColumn(name = "customer_id", nullable = false) // Matches foreign key in SQL
    private Customer customer;

    @OneToMany(mappedBy = "account", cascade = CascadeType.ALL)
    private List<Transaction> transactions;
}
